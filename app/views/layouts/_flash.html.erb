<div id="flashes">
  <% if flash.present? %>
  <% flash.each do |name, msg| -%>
    <div class="alert alert-dismissible" style="background-color: antiquewhite;">
      <button type="button" class="close" data-dismiss="alert">x</button>
      <%=  msg.kind_of?(Array) ? msg.join(',') : msg %>
    </div>
  <% end -%>
  <%end%>
</div>
 <script type="text/javascript">
   $(document).ready(function () {
     setTimeout(function() {
       $('#flashes').fadeOut('slow');}, 6000);
   });
 </script>
